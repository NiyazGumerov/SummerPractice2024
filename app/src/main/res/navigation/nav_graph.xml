<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_action_1">

    <fragment
        android:id="@+id/fragment_action_1"
        android:name="ru.itis.summerpractice24.Action1Fragment"
        android:label="fragment_action_1"
        tools:layout="@layout/fragment_action_1" >
        <action
            android:id="@+id/action_1_to_sixthFragment"
            app:destination="@id/sixthFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/sixthFragment"
        android:name="ru.itis.summerpractice24.SixthFragment"
        android:label="fragment_6"
        tools:layout="@layout/fragment_6" >
        <argument
        android:name="text_for_fragment_sixth"
        app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/fragment_action_2"
        android:name="ru.itis.summerpractice24.Action2Fragment"
        android:label="fragment_action_2"
        tools:layout="@layout/fragment_action_2" />
    <fragment
        android:id="@+id/fragment_action_3"
        android:name="ru.itis.summerpractice24.Action3Fragment"
        android:label="fragment_action_3"
        tools:layout="@layout/fragment_action_3" />
    <fragment
        android:id="@+id/fragment_action_4"
        android:name="ru.itis.summerpractice24.Action4Fragment"
        android:label="fragment_action_4"
        tools:layout="@layout/fragment_action_4" />
    <fragment
        android:id="@+id/fragment_action_5"
        android:name="ru.itis.summerpractice24.Action5Fragment"
        android:label="fragment_action_5"
        tools:layout="@layout/fragment_action_5" >
        <action
            android:id="@+id/action_fragment_action_5_to_detailGroupFragment"
            app:destination="@id/detailGroupFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailGroupFragment"
        android:name="ru.itis.summerpractice.DetailGroupFragment"
        android:label="DetailGroupFragment" >
        <action
            android:id="@+id/action_detailGroupFragment_to_fragment_action_5"
            app:destination="@id/fragment_action_5" />
    </fragment>


</navigation>